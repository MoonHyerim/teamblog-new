    <%= f.label :content %>
    <%= f.text_area :content, cols:"30", rows:"10",class:"input-xxlarge" %>
  </div>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.datepicker :start_date, dateFormat: "yy-mm-dd",class:"input-xxlarge" %>
  </div>
  <div class="field">
    <%= f.label :end_date %>
    <%= f.datepicker :end_date, dateFormat: "yy-mm-dd",class:"input-xxlarge"  %>
  </div>
  <div class="actions">
    <%= f.submit "Write",class:"btn btn-primary btn-large" %>
  </div>
<% end %>
