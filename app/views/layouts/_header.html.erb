<div id="wrapper">
    <!-- 헤더 영역 -->
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="localhost:3000"><%=link_to (image_tag "logo_web.png"), root_path%></a>
      <div class="nav-collapse collapse pull-right">
      <% if user_signed_in? %>
        <div><%= link_to "Sign out!", destroy_user_session_path,method: :delete, confirm: "Are you sure?", class:"btn btn-danger" %></div>
      <% else %>
        <%= form_for("user", url: user_session_path, html:{class: "navbar-form pull-right"}) do |f| %>
          <%= f.text_field :email,placeholder: "E-MAIL", class:"span2"%>
          <%= f.password_field :password,placeholder:"PASSWORD", class:"span2" %>
          <%= f.submit 'Sign in', class:"btn btn-primary"%>
        <% end %>
      <% end %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>
