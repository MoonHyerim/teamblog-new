<%= form_for(@board) do |f| %>
  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% @board.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder:"Someone's name", class:"input-block-level" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, placeholder:"example@example.com", class:"input-block-level" %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, placeholder:"Talk about Something", class:"input-block-level" %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, placeholder:"Details..", class:"input-block-level", rows:5 %>
  </div>
  <div class="actions">
    <%= f.submit  "Write", class:"btn btn-primary" %>
  </div>
<% end %>
